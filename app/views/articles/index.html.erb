<table class="articles">
    <tr class="articles article__thead">
        <th>Title</th>
        <th>Description</th>
        <th>Link</th>
    </tr>
    
    <% @articles.each do |article| %>
        <tr class="articles article__tbody">
            <td><%= article.title %></td>
            <td><%= article.desc %></td>
            <td><%= link_to 'Show', article_path(article) %>
                <% if current_user %>
                    <%= link_to 'Edit', edit_article_path(article) %>
                    <%= link_to 'Delete', article_path(article),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %>
                <% end %>
            </td>
        </tr>
    <% end %>
</table>
