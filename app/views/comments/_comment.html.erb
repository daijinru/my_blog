<% @article.comments.each do |comment| %>
    <div class="article article__comments-item">
        <p class="article article__comments-author"><%= comment.commenter %>:</p>
        <p class="article article__comments-body"><%= comment.body %></p>
    </div>
    <div>
        <% if current_user %>
            <%= link_to 'Destroy Comment', [comment.article, comment],
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
        <% end %>
    </div>
<% end %>